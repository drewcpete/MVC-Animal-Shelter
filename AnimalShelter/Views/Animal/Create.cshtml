@{
  Layout = "_Layout";
}

@using AnimalShelter.Models
@model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name, "Name")
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
    @Html.LabelFor(model => model.Age, "Age")
    @Html.TextBoxFor(model => model.Age, new {@class = "form-control"})
    @Html.LabelFor(model => model.AdmittanceDate, "Admittance Date")
    @Html.TextBoxFor(model => model.AdmittanceDate, new {@class = "form-control"})
    @Html.LabelFor(model => model.PetType, "Type")
    @Html.DropDownListFor(model => model.PetType,
    new SelectList(Enum.GetValues(typeof(AnimalType))),
    "Select Type", new {@class = "form-control"})
    @Html.LabelFor(model => model.Breed, "Breed")
    @Html.TextBoxFor(model => model.Breed, new {@class = "form-control"})

    <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all items", "Index")</p> 