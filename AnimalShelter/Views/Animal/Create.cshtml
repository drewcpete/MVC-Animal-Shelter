@{
  Layout = "_Layout";
}

@using AnimalShelter.Models
@model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age)
    @Html.LabelFor(model => model.AdmittanceDate)
    @Html.TextBoxFor(model => model.AdmittanceDate)
    @Html.LabelFor(model => model.PetType)
    @Html.DropDownListFor(model => model.PetType,
    new SelectList(Enum.GetValues(typeof(AnimalType))),
    "Select Type")
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)

    <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all items", "Index")</p> 